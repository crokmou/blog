{
  "name": "crokmou",
  "version": "2.0.0",
  "private": true,
  "description": "Blog de Crokmou.com",
  "scripts": {
    "getSize": "node ./_scripts/getSize.js",
    "test": "parallelshell 'npm run lint:js' &> lint",
    "lint:js": "eslint ./themes/crokmou/static-src/js/app",
    "help": "npm run remark --help",
    "fix-lint": "eslint ./themes/crokmou/static-src/js/app --fix",
    "clean": "rm -rf ./themes/crokmou/static ./public",
    "jsVendor": "cat ./themes/crokmou/static-src/js/vendor/*.js > ./themes/crokmou/static/vendor.js",
    "babel:build": "babel ./themes/crokmou/static-src/js --out-file ./themes/crokmou/static/app.js --source-maps",
    "babel:watch": "babel ./themes/crokmou/static-src/js --watch --out-file ./themes/crokmou/static/app.js --source-maps",
    "sass:watch": "onchange './themes/crokmou/static-src/scss/**/*.scss' -- npm run sass:build",
    "sass:build": "node-sass --output-style compressed './themes/crokmou/static-src/scss/style.scss' -o ./themes/crokmou/static/",
    "postcsass:build": "postcss --use autoprefixer -b 'last 2 versions' ./themes/crokmou/static/style.css",
    "img:build": "cp -R ./themes/crokmou/static-src/images ./themes/crokmou/static/images",
    "build:assets": "npm run clean && npm run sass:build && npm run babel:build && npm run img:build",
    "build": "npm run build:assets",
    "postbuild": "npm run jsVendor",
    "serve": "npm run build:assets && npm run jsVendor && parallelshell 'npm run sass:watch' 'npm run babel:watch' 'hugo serve'"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "google"
    ],
    "parser": "babel-eslint",
    "rules": {
      "key-spacing": [
        "error",
        {
          "align": "colon"
        }
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "no-multi-spaces": "off",
      "require-jsdoc": "off"
    },
    "globals": {
      "process": true,
      "require": true,
      "window": true,
      "console": true,
      "fetch": true,
      "document": true,
      "location": true,
      "navigator": true,
      "module": true,
      "localStorage": true,
      "clearInterval": true,
      "setInterval": true
    }
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel": "^6.23.0",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "eslint": "^4.1.1",
    "eslint-config-google": "^0.8.0 ",
    "image-size": "^0.6.1",
    "node-sass": "^4.5.3",
    "onchange": "^3.2.1",
    "parallelshell": "^3.0.1"
  }
}
